<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/courses.css">
</head>
<body>
   <div class="wrapper">
    <header>
        <nav class="navbar">
            <img src="/icons/logo.png" alt="GFU_logo" class="logo">
            <div class="logo">Courses</div>
            <ul class="nav-links">
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/courses">Courses</a></li>
                <li><a href="#">Student Services</a></li>
            </ul>
            <div class="settings-icon">
                <a href="/profile"><img src="/icons/settings.png" alt="Settings"></a>
            </div>
        </nav>
    </header>

    <main class="courses-container">
        <% courses.forEach((course) => { %>
            <div class="course-card">
                <h3><%= course.course_name %></h3>
                <p>Professor: <%= course.professor %></p>
                <p>Days: <%= course.schedule.days.join(', ') %></p>
                <p>Time: <%= course.schedule.time %></p>
                <p>Enrollment Cost: $<%= course.fee %></p>
                <p>Credits: <%= course.credits %></p>
                <button class="register-btn">Register</button>
            </div>
        <% }); %>
    </main>

    <footer>
        <p>&copy; 2025 GFU. All rights reserved.</p>
    </footer>
</div>

    <script src="/javascript/dashboard.js"></script>
</body>
</html>